/// <reference path="../../node_modules/@types/jquery/index.d.ts" />


describe("colorJs - dom manipulation ", function () {
    
    it("can we create a new seed element for cJ ", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        var drop = cJ.dropTheSeed();
        var tarGet = '#' + cJ.rootElemnentID ;
        expect(drop).toEqual(tarGet);
    });
    it("can we put custom css in header section", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        cJ.dropStyle();
        expect($('style['+cJ.styleAttr+']').attr(cJ.styleAttr)).toEqual('cJ');
    });
    it("can we get the root of cJ seed", function () {
        var cJ = new colorJs();
        var rootItem = cJ.register().getRootElem();
        var rootId = $('#' + cJ.rootElemnentID);
        expect(rootItem).toEqual(rootId[0]);
    });
    it("can we put a navBar in our cJ seed", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        cJ.register().dropNavigationToRoot();
        var elem  = $('#' + cJ.rootElemnentID + '>header');
        //must have the header element
        expect(elem.length).toEqual(1);
        //it must have one span (1)
        expect(elem.first().children().length).toEqual(1);
        //must have 2 childs
        expect(elem.first().children().first().children().length).toEqual(2);
    });
    it("can we get the navbar and work with it ", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        cJ.register().getNavigationElem();
        var elem  = $('#' + cJ.rootElemnentID + '>header');
        //must have the header element
        expect(elem.length).toEqual(1);
        //it must have one span (1)
        // expect(elem.first().children().length).toEqual(1);
        // //must have 2 childs
        // expect(elem.first().children().first().children().length).toEqual(2);
    });
    it("can we create the color pattel", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        cJ.register().createColorPattel();
        var parent  = $('#' + cJ.rootElemnentID).children();
        var elem = $(parent[1]);
        //must have the head)er element
        expect(elem.attr('id')).toEqual(cJ.paletteID);
        expect(elem.children().length).toBe(19);
        //it must have one span (1)
        // expect(elem.first().children().length).toEqual(1);
        // //must have 2 childs
        // expect(elem.first().children().first().children().length).toEqual(2);
    });
    it("can we create the footer text ", function () {
        // loadFixtures('index.html')
        var cJ = new colorJs();
        cJ.register().setFooterText();
        var parent  = $('#' + cJ.rootElemnentID).children();
        var elem = $(parent[1]);
        //must have the head)er element
        expect(elem.attr('id')).toEqual(cJ.paletteID);
        expect(elem.children().length).toBe(19);
        //it must have one span (1)
        // expect(elem.first().children().length).toEqual(1);
        // //must have 2 childs
        // expect(elem.first().children().first().children().length).toEqual(2);
    });
    
});